{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "paths": {
      "@app/*": ["app/*"],
      "@env/*": ["environments/*"],
      "@lbservices": ["app/lbservices"]
    },
    "module": "es2015",
    "types": []
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts",
    "../modules/**/*.spec.ts"
  ],
  "include": [
    "./**/*.ts",
    "../modules/**/client/*.ts"
  ]
}
